<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.social.services.domain.dao.QueryMemberTrendsDao">
    <sql id="Base_Column_List">
            so_member_trends.*
        </sql>
        <select id="findMemberTrendsPage" resultType="MemberTrends" parameterType="MemberTrends">
            SELECT so_member_trends.*
            FROM so_member_trends
            WHERE 1=1
                             <if test="id != null and id>0 ">
                 AND so_member_trends.id LIKE CONCAT('%',#{id},'%')
            </if>
                                             <if test="memberId != null and memberId>0 ">
                 AND so_member_trends.member_id LIKE CONCAT('%',#{memberId},'%')
            </if>
                             <if test="trends != null and trends!= ''">
                 AND so_member_trends.trends LIKE CONCAT('%',#{trends},'%')
            </if>
                                             <if test="createTime != null and createTime>0 ">
                 AND so_member_trends.create_time LIKE CONCAT('%',#{createTime},'%')
            </if>
                             <if test="field1 != null and field1!= ''">
                 AND so_member_trends.field1 LIKE CONCAT('%',#{field1},'%')
            </if>
                             <if test="field2 != null and field2!= ''">
                 AND so_member_trends.field2 LIKE CONCAT('%',#{field2},'%')
            </if>
                             <if test="field3 != null and field3!= ''">
                 AND so_member_trends.field3 LIKE CONCAT('%',#{field3},'%')
            </if>
                    </select>
</mapper>