<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.notice.services.domain.dao.QueryNoticeDao">
    <sql id="Base_Column_List">
            t_notice.*
        </sql>
        <select id="findNotices" resultType="Notice">
            SELECT t_notice.*
            FROM t_notice
            WHERE 1=1
            <if test="name != null and name != ''">
                AND t_notice.name LIKE CONCAT('%',#{name},'%')
            </if>

            <if test="status != null and status != ''">
                AND t_notice.status LIKE CONCAT('%',#{status},'%')
            </if>
        </select>
        <select id="findNoticePage" resultType="Notice" parameterType="Notice">
            SELECT t_notice.*
            FROM t_notice
            WHERE 1=1
            <if test="id != null and id>0 ">
                    AND t_notice.id LIKE CONCAT('%',#{id},'%')
                </if>
            <if test="type != null and type!= ''">
                    AND t_notice.type LIKE CONCAT('%',#{type},'%')
                </if>
            <if test="enable != null and enable>0 ">
                    AND t_notice.enable LIKE CONCAT('%',#{enable},'%')
                </if>
            <if test="title != null and title!= ''">
                    AND t_notice.title LIKE CONCAT('%',#{title},'%')
                </if>
            <if test="content != null and content!= ''">
                    AND t_notice.content LIKE CONCAT('%',#{content},'%')
                </if>
            <if test="create_time != null and create_time>0 ">
                    AND t_notice.create_time LIKE CONCAT('%',#{createTime},'%')
                </if>
            <if test="update_time != null and update_time>0 ">
                    AND t_notice.update_time LIKE CONCAT('%',#{updateTime},'%')
                </if>
                    </select>


</mapper>