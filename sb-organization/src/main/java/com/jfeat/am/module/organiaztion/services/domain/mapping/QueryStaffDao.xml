<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.organiaztion.services.domain.dao.QueryStaffDao">

    <sql id="Base_Column_List">
        t_staff.*
    </sql>

    <select id="findStaffs" resultType="Staff">
        SELECT t_staff.*
        FROM t_staff
        WHERE 1=1
        <if test="departmentId != null and departmentId != ''">
            AND t_staff.department_id LIKE CONCAT('%',#{departmentId},'%')
        </if>

        <if test="position != null and position != ''">
            AND t_staff.position LIKE CONCAT('%',#{position},'%')
        </if>

        <if test="workAge != null and workAge != ''">
            AND t_staff.work_age LIKE CONCAT('%',#{workAge},'%')
        </if>

    </select>

</mapper>