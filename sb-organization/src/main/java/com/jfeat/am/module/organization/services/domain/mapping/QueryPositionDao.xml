<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.organization.services.domain.dao.QueryPositionDao">
    <sql id="Base_Column_List">
            t_position.*
        </sql>
        <select id="findPositionPage" resultType="Position" parameterType="Position">
            SELECT t_position.*
            FROM t_position
            WHERE 1=1
                             <if test="id != null and id>0 ">
                 AND t_position.id LIKE CONCAT('%',#{id},'%')
            </if>
                             <if test="name != null and name!= ''">
                 AND t_position.name LIKE CONCAT('%',#{name},'%')
            </if>
                             <if test="note != null and note!= ''">
                 AND t_position.note LIKE CONCAT('%',#{note},'%')
            </if>
                    </select>
</mapper>