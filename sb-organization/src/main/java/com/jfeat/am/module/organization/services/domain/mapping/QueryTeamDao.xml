<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.organization.services.domain.dao.QueryTeamDao">


    <select id="teamsLeader" resultType="Team">

        <!--  查询所有 该员工 所管理的Team -->
        SELECT t_team.*
        FROM t_team
        LEFT JOIN t_team_staff
        ON t_team_staff.team_id=t_team.id
        WHERE t_team_staff.is_leader=1
        AND t_team_staff.staff_id=#{staffId}

    </select>






    <sql id="Base_Column_List">
            team.*
        </sql>
    <select id="findTeamPage" resultType="TeamModel" parameterType="Team">
        SELECT team.*
        FROM team
        WHERE 1=1
        <if test="teamName != null and teamName!= ''">
            AND team.teamName LIKE CONCAT('%',#{teamName},'%')
        </if>
        <if test="teamDesc != null and teamDesc!= ''">
            AND team.teamDesc LIKE CONCAT('%',#{teamDesc},'%')
        </if>
    </select>
</mapper>