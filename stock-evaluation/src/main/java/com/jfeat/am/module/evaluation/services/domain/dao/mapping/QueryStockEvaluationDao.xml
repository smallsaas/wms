<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.evaluation.services.domain.dao.QueryStockEvaluationDao">
    <sql id="Base_Column_List">
            t_stock_evaluation.*
        </sql>
    <select id="findStockEvaluationPage" resultType="StockEvaluationRecord" parameterType="StockEvaluationRecord">
      SELECT t_stock_evaluation.*
            FROM t_stock_evaluation
            WHERE 1=1
                                <if test="record.id != null and record.id>0 ">
    AND t_stock_evaluation.id LIKE CONCAT('%',#{record.id},'%')
    </if>
                                        
                                                                                                     <if test="record.stockId != null and record.stockId>0 ">
    AND t_stock_evaluation.stock_id LIKE CONCAT('%',#{record.stockId},'%')
    </if>
                                        
                                                                                                     <if test="record.memberId != null and record.memberId>0 ">
    AND t_stock_evaluation.member_id LIKE CONCAT('%',#{record.memberId},'%')
    </if>
                        <if test="record.type != null and record.type!= ''">
    AND t_stock_evaluation.type LIKE CONCAT('%',#{record.type},'%')
    </if>
                        <if test="record.note != null and record.note!= ''">
    AND t_stock_evaluation.note LIKE CONCAT('%',#{record.note},'%')
    </if>
                                        
                                                                                                     <if test="record.isDisplay != null and record.isDisplay>0 ">
    AND t_stock_evaluation.is_display LIKE CONCAT('%',#{record.isDisplay},'%')
    </if>
                                        
                                                                                                     <if test="record.isStick != null and record.isStick>0 ">
    AND t_stock_evaluation.is_stick LIKE CONCAT('%',#{record.isStick},'%')
    </if>
                        <if test="record.status != null and record.status!= ''">
    AND t_stock_evaluation.status LIKE CONCAT('%',#{record.status},'%')
    </if>
                                        
                                                                                                     <if test="record.createTime != null and record.createTime>0 ">
    AND t_stock_evaluation.create_time LIKE CONCAT('%',#{record.createTime},'%')
    </if>
        </select>
</mapper>