<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.systemconfig.services.domain.dao.QuerySystemConfigDao">
    <sql id="Base_Column_List">
            sb_system_config.*
        </sql>
        <select id="findSystemConfigPage" resultType="SystemConfig" parameterType="SystemConfig">
      SELECT sb_system_config.*
            FROM sb_system_config
            WHERE 1=1
                             <if test="systemConfig.id != null and systemConfig.id>0 ">
                 AND sb_system_config.id LIKE CONCAT('%',#{systemConfig.id},'%')
            </if>
                                             <if test="systemConfig.dataKey != null and systemConfig.dataKey!= ''">
                 AND sb_system_config.data_key LIKE CONCAT('%',#{systemConfig.dataKey},'%')
            </if>
                                             <if test="systemConfig.dataValue != null and systemConfig.dataValue!= ''">
                 AND sb_system_config.data_value LIKE CONCAT('%',#{systemConfig.dataValue},'%')
            </if>
                    </select>
</mapper>